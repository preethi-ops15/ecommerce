# Backend environment variables (example)
# Copy this file to .env and fill with your own values. Do NOT commit the real .env.

MONGO_URI=mongodb://localhost:27017/jewellerydb
JWT_SECRET=replace_with_strong_random_secret
COOKIE_EXPIRATION_DAYS=7
OTP_EXPIRATION_TIME=900000
LOGIN_TOKEN_EXPIRATION=7d

# App origin for CORS (optional)
ORIGIN=http://localhost:3000

# Email credentials (if sending emails)
EMAIL=your_email@example.com
PASSWORD=your_app_password_or_smtp_password

# Razorpay keys (if using payments)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxx
